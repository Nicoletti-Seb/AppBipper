<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.mbds.fr.unice.appbipper.MenuDescActivity">

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_element_number"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/menu_desc_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_number"
        android:text="58693c395a4b708e2b04a07c"/>

    <TextView
        android:id="@+id/text_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_element_server"
        android:layout_below="@id/text_number"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/menu_desc_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nicoletti Sébastien"
        android:layout_below="@+id/menu_desc_number"
        android:layout_toRightOf="@+id/text_server" />

    <TextView
        android:id="@+id/text_cooker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_element_cooker"
        android:layout_below="@id/menu_desc_server"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/menu_desc_cooker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nicoletti Sébastien"
        android:layout_below="@id/menu_desc_server"
        android:layout_toRightOf="@+id/text_cooker" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_cooker"
        android:layout_above="@+id/menu_desc_total_discount"/>

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_price"
        android:layout_toLeftOf="@+id/menu_desc_total_discount"
        android:text="Total Remise:"/>

    <TextView
        android:id="@+id/menu_desc_total_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_desc_total_price"
        android:layout_alignParentRight="true"
        android:text="50€"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/menu_desc_total_price"
        android:layout_alignParentBottom="true"
        android:text="Total:"/>

    <TextView
        android:id="@+id/menu_desc_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="50€"/>


</RelativeLayout>
